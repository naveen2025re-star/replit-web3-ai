{
  "manifest_version": 3,
  "name": "SmartAudit AI - Contract Scanner",
  "version": "1.0.0",
  "description": "Scan smart contracts for security vulnerabilities directly from Etherscan and other block explorers",
  "permissions": [
    "activeTab",
    "storage",
    "https://etherscan.io/*",
    "https://*.etherscan.io/*",
    "https://bscscan.com/*",
    "https://polygonscan.com/*",
    "https://arbiscan.io/*",
    "https://ftmscan.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://etherscan.io/address/*",
        "https://*.etherscan.io/address/*",
        "https://bscscan.com/address/*",
        "https://polygonscan.com/address/*",
        "https://arbiscan.io/address/*",
        "https://ftmscan.com/address/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SmartAudit AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}