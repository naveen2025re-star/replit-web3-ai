{
  "name": "smartaudit-ai",
  "displayName": "SmartAudit AI",
  "description": "AI-powered smart contract security analysis directly in VS Code",
  "version": "1.0.0",
  "publisher": "smartaudit-ai",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Debuggers", 
    "Linters"
  ],
  "keywords": [
    "solidity",
    "smart contracts",
    "security",
    "blockchain",
    "ethereum",
    "audit"
  ],
  "activationEvents": [
    "onLanguage:solidity",
    "onCommand:smartaudit.auditFile",
    "onCommand:smartaudit.showHistory"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smartaudit.auditFile",
        "title": "Audit with SmartAudit AI",
        "category": "SmartAudit",
        "icon": "$(shield)"
      },
      {
        "command": "smartaudit.showHistory", 
        "title": "Show Audit History",
        "category": "SmartAudit",
        "icon": "$(history)"
      },
      {
        "command": "smartaudit.showCredits",
        "title": "Show Credit Balance",
        "category": "SmartAudit",
        "icon": "$(credit-card)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "smartaudit.auditFile",
          "when": "resourceExtname == .sol",
          "group": "smartaudit@1"
        }
      ],
      "editor/title": [
        {
          "command": "smartaudit.auditFile", 
          "when": "resourceExtname == .sol",
          "group": "navigation@1"
        }
      ],
      "explorer/context": [
        {
          "command": "smartaudit.auditFile",
          "when": "resourceExtname == .sol",
          "group": "smartaudit@1"
        }
      ]
    },
    "configuration": {
      "title": "SmartAudit AI",
      "properties": {
        "smartaudit.apiKey": {
          "type": "string",
          "description": "Your SmartAudit AI API key (get from smartaudit.ai)",
          "order": 1
        },
        "smartaudit.apiUrl": {
          "type": "string", 
          "default": "https://smartaudit-ai.replit.app",
          "description": "SmartAudit AI API URL",
          "order": 2
        },
        "smartaudit.autoAudit": {
          "type": "boolean",
          "default": false,
          "description": "Automatically audit Solidity files on save",
          "order": 3
        },
        "smartaudit.showInlineResults": {
          "type": "boolean",
          "default": true,
          "description": "Show audit results as inline diagnostics",
          "order": 4
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "smartauditSidebar",
          "name": "SmartAudit AI",
          "when": "workspaceHasSmartContracts"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "smartauditSidebar",
        "contents": "Configure your SmartAudit AI API key to get started.\n[Configure API Key](command:workbench.action.openSettings?%5B%22smartaudit.apiKey%22%5D)\n[Get API Key](https://smartaudit.ai/settings)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "typescript": "^4.7.2",
    "@vscode/test-electron": "^2.1.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}