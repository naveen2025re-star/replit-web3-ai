{
  "name": "smartaudit-ai",
  "displayName": "SmartAudit AI",
  "description": "AI-powered smart contract security analysis directly in VS Code",
  "version": "1.0.0",
  "publisher": "smartaudit-ai",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartaudit-ai/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/smartaudit-ai/vscode-extension/issues"
  },
  "homepage": "https://smartaudit.ai",
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Debuggers", 
    "Linters"
  ],
  "keywords": [
    "solidity", "rust", "move", "cairo", "vyper", "clarity", "cadence",
    "smart contracts", "blockchain security", "web3", "defi",
    "ethereum", "polygon", "solana", "near", "starknet", "flow", "cardano",
    "security audit", "vulnerability scanner", "static analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/finalExtension.js",
  "contributes": {
    "commands": [
      {
        "command": "smartaudit.auditFile",
        "title": "Audit with SmartAudit AI",
        "category": "SmartAudit",
        "icon": "$(shield)"
      },
      {
        "command": "smartaudit.showHistory", 
        "title": "Show Audit History",
        "category": "SmartAudit",
        "icon": "$(history)"
      },
      {
        "command": "smartaudit.showCredits",
        "title": "Show Credit Balance",
        "category": "SmartAudit",
        "icon": "$(credit-card)"
      },
      {
        "command": "smartaudit.selectLanguage",
        "title": "Select Blockchain Language",
        "category": "SmartAudit",
        "icon": "$(symbol-property)"
      },
      {
        "command": "smartaudit.selectNetwork",
        "title": "Select Target Network",
        "category": "SmartAudit",
        "icon": "$(globe)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "smartaudit.auditFile",
          "when": "resourceExtname in (.sol, .rs, .move, .cairo, .vy, .yul, .clar, .cdc, .hs, .as, .cpp, .cc, .cxx, .tz, .wasm, .wat, .go, .ts, .js, .py)",
          "group": "smartaudit@1"
        }
      ],
      "editor/title": [
        {
          "command": "smartaudit.auditFile", 
          "when": "resourceExtname in (.sol, .rs, .move, .cairo, .vy, .yul, .clar, .cdc, .hs, .as, .cpp, .cc, .cxx, .tz, .wasm, .wat, .go, .ts, .js, .py)",
          "group": "navigation@1"
        }
      ],
      "explorer/context": [
        {
          "command": "smartaudit.auditFile",
          "when": "resourceExtname in (.sol, .rs, .move, .cairo, .vy, .yul, .clar, .cdc, .hs, .as, .cpp, .cc, .cxx, .tz, .wasm, .wat, .go, .ts, .js, .py)",
          "group": "smartaudit@1"
        }
      ]
    },
    "configuration": {
      "title": "SmartAudit AI",
      "properties": {
        "smartaudit.apiKey": {
          "type": "string",
          "description": "Your SmartAudit AI API key (get from smartaudit.ai)",
          "order": 1
        },
        "smartaudit.apiUrl": {
          "type": "string", 
          "default": "https://smartaudit-ai.replit.app",
          "description": "SmartAudit AI API URL",
          "order": 2
        },
        "smartaudit.autoAudit": {
          "type": "boolean",
          "default": false,
          "description": "Automatically audit blockchain files on save",
          "order": 3
        },
        "smartaudit.supportedLanguages": {
          "type": "array",
          "default": ["solidity", "rust", "move", "cairo", "vyper", "go", "typescript", "python"],
          "description": "Blockchain languages to audit (all supported by default)",
          "order": 4
        },
        "smartaudit.preferredNetwork": {
          "type": "string",
          "enum": ["ethereum", "polygon", "bsc", "arbitrum", "optimism", "base", "solana", "near", "starknet", "flow", "cardano", "auto-detect"],
          "default": "auto-detect",
          "description": "Preferred blockchain network for analysis",
          "order": 5
        },
        "smartaudit.languageOverrides": {
          "type": "object",
          "default": {},
          "description": "Manual language overrides for specific files",
          "order": 6
        },
        "smartaudit.enableAdvancedChecks": {
          "type": "boolean",
          "default": true,
          "description": "Enable advanced language-specific security checks",
          "order": 7
        },
        "smartaudit.showInlineResults": {
          "type": "boolean",
          "default": true,
          "description": "Show audit results as inline diagnostics",
          "order": 8
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "smartauditSidebar",
          "name": "SmartAudit AI",
          "icon": "$(shield)",
          "contextualTitle": "SmartAudit AI Dashboard"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production",
    "package-dev": "webpack --mode development",
    "watch-webpack": "webpack --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test-security": "npm run compile && node ./out/test/securityTest.js",
    "build": "vsce package --out smartaudit-ai.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "typescript": "^4.7.2",
    "@vscode/test-electron": "^2.1.3",
    "vsce": "^2.15.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.0",
    "terser-webpack-plugin": "^5.3.9",
    "mocha": "^10.2.0",
    "@types/mocha": "^10.0.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "crypto-js": "^4.2.0"
  }
}